\documentclass{beamer}

\usetheme{Madrid} % You can change this theme (e.g., Warsaw, Berkeley, etc.)

\title{My First Beamer Presentation}
\author{John Doe}
\date{\today}

\begin{document}

% Title Slide
\begin{frame}
  \titlepage
\end{frame}

% Table of Contents
\begin{frame}{Outline}
  \tableofcontents
\end{frame}

% Section 1
\section{Introduction}

\begin{frame}{Introduction}
  This is a simple introduction slide.
  \begin{itemize}
    \item Point one
    \item Point two
    \item Point three
  \end{itemize}
\end{frame}

% Section 2
\section{Main Content}

\begin{frame}{Main Ideas}
  \begin{enumerate}
    \item First idea
    \item Second idea
    \item Third idea
  \end{enumerate}
\end{frame}

% Section 3
\section{Conclusion}

\begin{frame}{Conclusion}
  \begin{itemize}
    \item Summary of key points
    \item Final thoughts
  \end{itemize}
  \vfill
  Thank you for your attention!
\end{frame}

