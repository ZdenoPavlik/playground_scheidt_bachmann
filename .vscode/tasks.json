{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildProject",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "make",
            "args": [
                "-j"
            ],
            "dependsOn": "cleanScreen",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "buildProject_win",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--parallel"
            ],
            "dependsOn": "cleanScreen_win",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cleanScreen",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "reset"
        },
        {
            "label": "cleanScreen_win",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cls"
        }
    ]
}